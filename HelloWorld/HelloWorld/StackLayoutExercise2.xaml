<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HelloWorld.StackLayoutExercise2">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout Padding="10">
                <Label FontSize="10" Text="nyc_photographer" />
            </StackLayout>
            <Image Source="http://lorempixel.com/1920/1080/nature/3/" />
            <StackLayout Padding="10" Orientation="Horizontal">
                <Label FontSize="10" TextColor="Blue" Text="Like" />
                <Label FontSize="10" TextColor="Blue" Text="Comment" />
                <Label FontSize="10" TextColor="Blue" Text="Share" />
            </StackLayout>
            <BoxView Color="#f0f0f0" HeightRequest="1" />
            <StackLayout Padding="10">
                <Label FontSize="10" FontAttributes="Bold" Text="700 likes" />
                <Label FontSize="10" Text="This is a shot yesterday in Skanor, Sweden, when driving home, from a couple days of work in Denmark." />
            </StackLayout>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>