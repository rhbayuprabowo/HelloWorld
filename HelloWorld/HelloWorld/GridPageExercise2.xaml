<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HelloWorld.GridPageExercise2">
    <ContentPage.Content>
        <StackLayout BackgroundColor="#127ac7">
            <Grid VerticalOptions="FillAndExpand" Padding="20, 0, 20, 20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="30" />
                    <RowDefinition Height="30" />
                </Grid.RowDefinitions>
                <StackLayout Grid.Row="0" Grid.Column="0" VerticalOptions="Center" >
                    <Label TextColor="#fff" Text="Welcome to Xamarin" HorizontalOptions="Center" FontSize = "20" FontAttributes = "Bold"/>
                    <Label TextColor="#fff" Text="Cross platform app made easy" HorizontalOptions="Center" FontSize = "10" />
                </StackLayout>
                <Button BorderRadius="5" FontSize = "8" BackgroundColor="#1dabf0" TextColor="#fff" Grid.Row="1" Grid.Column="0" Text="Login" />
                <Button BorderRadius="5" FontSize = "8" BackgroundColor="#1dabf0" TextColor="#fff" Grid.Row="2" Grid.Column="0" Text="Register" />

            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>