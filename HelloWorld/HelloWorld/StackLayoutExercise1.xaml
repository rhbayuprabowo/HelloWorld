<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HelloWorld.StackLayoutExercise1">
    <ContentPage.Content>
        <StackLayout BackgroundColor="#127ac7" VerticalOptions="Fill" HorizontalOptions="Fill" >
            <StackLayout VerticalOptions="CenterAndExpand">
                <Label Text="Welcome to Xamarin" FontSize="20" TextColor="White" FontAttributes="Bold" HorizontalOptions="Center" VerticalOptions="Center"/>
                <Label Text="Cross-platform apps made easy" FontSize="10" TextColor="White" HorizontalOptions="Center" VerticalOptions="Center" />
                <Button HeightRequest="30" FontSize="8" BackgroundColor="#1dabf0" TextColor="White" Text="Login" />
                <Button HeightRequest="30" FontSize="8" BackgroundColor="#1dabf0" TextColor="White" Text="Register" />
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>